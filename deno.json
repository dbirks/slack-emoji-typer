{
  // Environment variables needed for compiled binary:
  // SLACK_TOKEN - Authentication token for Slack API
  // HOME,USERPROFILE - Finding .netrc file on Unix/Windows
  // NODE_ENV - Ink development vs production mode detection
  // TERM_PROGRAM - Ink terminal program identification (iTerm, VS Code, etc.)
  // TERM,COLORTERM - Ink terminal capabilities detection
  // FORCE_COLOR - Ink color output control
  "name": "slack-emoji-typer",
  "version": "1.0.0",
  "exports": "./main.ts",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read main.ts",
    "fmt": "deno fmt",
    "build": "deno compile --allow-net=slack.com --allow-env=SLACK_TOKEN,HOME,USERPROFILE,NODE_ENV,TERM_PROGRAM,TERM,COLORTERM,FORCE_COLOR --allow-read=$HOME/.netrc --target x86_64-unknown-linux-gnu main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "ink": "npm:ink@3",
    "react": "npm:react@18",
    "@types/react": "npm:@types/react@18"
  }
}
